Group: <%= @prayer.group.name %>
<br>
Title: <%= @prayer.title %>
<br>
Description: <%= @prayer.description %>
<br>

<h4>Comments</h4>

<% @prayer.comments.each do |comment| %>
  <p>
  <%= image_tag comment.user.image %> <%= comment.description %>
  </p>
<% end %>

<h4>Add a Comment</h4>

<%= form_for [@prayer, @comment] do |f| %>
  <%= f.label :comment %>:
  <%= f.text_field :description%><br>

  <%= f.submit %>
<% end %>

<%= link_to "back", group_path(@prayer.group.id)%>


