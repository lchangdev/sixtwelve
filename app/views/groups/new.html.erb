<h1 class="header"> New Group </h1>

<%= form_for @group, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label header"%>
    <div class="col-sm-5">
      <%= f.text_field :name, required: true, class: "form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :security_question, class: "col-sm-2 control-label header" %>
    <div class="col-sm-5">
      <%= f.text_field :security_question, required: true, class: "form-control" %><br>
    </div>
  </div>

  <div class="form-group">
  <%= f.label :security_answer, class: "col-sm-2 control-label header" %>
    <div class="col-sm-5">
      <%= f.text_field :security_answer, required: true, class: "form-control" %><br>
    </div>
  </div>

  <div class="col-md-5">
    <%= f.submit 'submit', class: 'btn btn-default' %>
  </div>

<% end %>
<br>
<h1> New Member </h1>
<%= form_for @member do |f| %>
  <%= f.label :user_id %>
  <%= f.text_field :user_id %>

  <%= f.label :group_id %>
  <%= f.text_field :group_id %>

  <%= f.submit 'submit' %>
<% end %>
<br>
<div>
<h1> Current Users </h1>
<% @users.each do |user| %>
  <li><%= user.id %> <%= user.name %></li>
<% end %>
</div>

<div>
<h1> Current Groups </h1>
<% @groups.each do |group| %>
  <li><%= group.id %> <%= group.name %></li>
<% end %>
</div>
